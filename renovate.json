{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "postUpdateOptions": [
    "gomodTidyE",
    "gomodUpdateImportPaths"
  ],
  "postUpgradeTasks": {
    "commands": [
      "make codegen"
    ],
    "fileFilters": [],
    "executionMode": "update"
  },
  "packageRules": [
    {
      "groupName": "Onsi packages grouping - Ginkgo and Gomega",
      "matchDatasources": [
        "go"
      ],
      "matchPackagePrefixes": [
        "github.com/onsi/"
      ]
    }
  ]
}
